<!DOCTYPE html>
<html lang="en">

<head>

    <title>Home Page</title>
    <%- include('partials/head') %>

</head>

<body>
    <%- include('partials/navbar') %>
        <div class="container mt-4">
            <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4">

                <% blogs.forEach(blog=> { %>
                    <div class="col">
                        <div class="card h-100 shadow-sm" style="border: none;">

                            <img src="<%= blog.coverImageURL %>" class="card-img-top" alt="<%= blog.title %>"
                                style="height: 150px; object-fit: cover;">

                            <div class="card-body d-flex flex-column p-3">

                                <h5 class="card-title card-title-clamp mb-2 text-dark">
                                    <%= blog.title %>
                                </h5>
                                        <a href="/blog/<%= blog._id %>"
                                            class="btn btn-outline-primary btn-sm mt-auto w-100">
                                            Read
                                        </a>
                            </div>
                        </div>
                    </div>
                    <% }) %>

            </div>
        </div>
        <%- include('partials/script') %>
</body>

</html>